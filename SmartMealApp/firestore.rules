rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: ¿Está autenticado?
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper: ¿Es el propietario?
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Colección de usuarios
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Subcolección de recetas
      match /recipes/{recipeId} {
        allow read, write: if isOwner(userId);
      }

      // Subcolección de menús semanales
      match /weekly_menus/{menuId} {
        allow read, write: if isOwner(userId);
      }

      // Subcolección de lista de la compra
      match /shoppingItems/{itemId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Mensajes de soporte: solo usuarios autenticados pueden leer y escribir
    match /support_messages/{docId} {
      allow read, write: if request.auth != null;
    }
    
    // FAQs: cualquier usuario puede leer
    match /faqs/{docId} {
      allow read: if true;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      
      // Colecciones dentro de users/{userId}
      match /{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}